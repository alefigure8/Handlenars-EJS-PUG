<%- layout('layout/main.ejs') %>
<div class="container">
  <div class="row">
    <div class="col-md-8 mr-auto ml-auto mt-5">
        <h2 class="mb-5 text-uppercase text-center">Vista de Productos</h2>
        <%if (productosLista.length > 0){ %>
        <table class="table">
          <thead>
             <tr>
              <th scope="col">TÃ­tulo</th>
              <th scope="col">Precio</th>
              <th scope="col">Foto</th>
            </tr>
          </thead>
          <tbody>
            <% productosLista.forEach(producto=> {%>
            <tr>
              <td><%= producto.title%></td>
              <td>$<%= producto.price%></td>
              <td><img src="<%= producto.thumbnail%>" class="img-thumbnail img" alt="<%= producto.title%>"></td>
