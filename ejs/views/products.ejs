            <% }); %>
          </tbody>
        </table>
        <%} else { %>
          <div class="alert alert-warning">
            No hay productos. Comience creando alguno <a href="/">Click!</a>
          </div>
          <% } %>
      <a href="/" class="btn btn-dark mt-3">Formulario</a>
    </div>
  </div>
</div>
