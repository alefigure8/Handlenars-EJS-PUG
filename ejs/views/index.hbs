<body class="container">
    <div class="mt-3 row" >
        <div class="col-md-6 mr-auto ml-auto">
            <h2 class="mb-5 text-uppercase text-center">Ingrese Producto</h2>
            <form action="/productos" class="mb-5" method="POST">
                <label for="title" class="form-label">Nombre</label>
                <input type="text" class="form-control" name="title" id="title">
                <label for="price" class="form-label">Precio</label>
                <input type="text" class="form-control" name="price" id="price">
                <label for="thumbnail" class="form-label">Foto URL</label>
                <input type="text" class="form-control" name="thumbnail" id="thumbnail">
                <button class="btn btn-success btn-block mt-3">Enviar</button>
            </form>
            <a href="/productos" class="btn btn-dark">Productos</a>
        </div>
    </div>
